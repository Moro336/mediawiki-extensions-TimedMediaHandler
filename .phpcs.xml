		<exclude name="MediaWiki.Usage.ExtendClassUsage.FunctionVarUsage" />
		<exclude name="MediaWiki.Usage.ForbiddenFunctions.exec" />
		<exclude name="MediaWiki.Usage.StaticClosure.StaticClosure" />
