<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment"/>
		<exclude name="MediaWiki.Commenting.FunctionComment"/>
	</rule>
	<rule ref="Generic.Files.LineLength">
		<exclude-pattern>TimedMediaHandler.i18n.*.php</exclude-pattern>
	</rule>
	<file>.</file>
	<arg name="extensions" value="php,php5,inc"/>
	<arg name="encoding" value="UTF-8"/>
	<exclude-pattern>libs</exclude-pattern>
	<exclude-pattern>MwEmbedModules</exclude-pattern>
	<exclude-pattern>handlers/OggHandler/File_Ogg</exclude-pattern>
	<exclude-pattern>vendor</exclude-pattern>
</ruleset>
